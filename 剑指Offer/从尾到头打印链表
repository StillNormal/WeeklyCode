/**
*  struct ListNode {
*        int val;
*        struct ListNode *next;
*        ListNode(int x) :
*              val(x), next(NULL) {
*        }
*  };
*/

// 输入一个链表，按链表值从尾到头的顺序返回一个ArrayList。

class Solution {
public:
    vector<int> v;
    
    vector<int> printListFromTailToHead(ListNode* head) { // 不用栈的话就递归
        if ((head != NULL)) {
            printListFromTailToHead(head->next);
            v.push_back(head->val); // 关键 位置
        }
        return v; // 每个return的vector不影响
    }
};