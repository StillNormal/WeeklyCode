class Solution {
public: 
    int H(TreeNode* pRoot) {
        if (pRoot == NULL)
            return 0;
        
        return max(H(pRoot->left), H(pRoot->right)) + 1;
    }
    
    bool IsBalanced_Solution(TreeNode* pRoot) {
        if (pRoot == NULL)
            return true;
        
        if (abs(H(pRoot->left) - H(pRoot->right)) <= 1) // 进一步优化是高度计算同时判断
            return IsBalanced_Solution(pRoot->left) && IsBalanced_Solution(pRoot->right);
        else
            return false;
    }
};