// 给定一个double类型的浮点数base和int类型的整数exponent。求base的exponent次方。

class Solution {
public:
    double Power(double base, int exponent) {
        // return pow(base, exponent);
        
        bool neg_exp = false;
        if (exponent < 0) {
            exponent = -exponent;
            neg_exp = true;
        }
        
        double an = 1;
        for (int i = 0; i < exponent; i++)
            an *= base;
        
        if (neg_exp)
            an = 1 / an;
        
        return an;
    }
};