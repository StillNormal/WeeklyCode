class LCA {
public:
    /*
    int getLCA(int a, int b) { // 关键在于满二叉树父节点值为子结点值一半
        if (a == b)
            return a;
        else if (a > b)
            a /= 2;
        else
            b /= 2;
        
        return getLCA(a, b);
    }
    */
    
    int getLCA(int a, int b) { // 非递归
        while (a != b) {
            if (a > b)
                a /= 2;
            else
                b /= 2;
        }
        return a;
    }    
};