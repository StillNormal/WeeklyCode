class Solution {
public:
    int integerBreak(int n) {
        if (n == 1 || n == 2)
            return 1;
        else if (n == 3)
            return 2;
        else {
            int val = 1;
            while (n > 4) { // Ì°ÐÄ
                n -= 3;
                val *= 3;
            }
            val *= n;
            return val;
        }
    }
};